<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.3" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
  <items>
    <AnchorPane fx:id="leftAnchorPane"
      styleClass="base-pane">
      <children>
        <VBox
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" >
          <children>
            <Label text="Label" />
          </children>
        </VBox>
      </children>
    </AnchorPane>
    <AnchorPane fx:id="rightAnchorPane"
      styleClass="light-pane">
      <children>
        <VBox
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" >
          <children>
            <ListView fx:id="messageListView"
              VBox.vgrow="ALWAYS"/>
            <HBox
              styleClass="footer-pane"
              VBox.vgrow="NEVER">
              <children>
                <TextField fx:id="messageTextField"
                  HBox.hgrow="ALWAYS"/>
                <Button fx:id="submitButton"
                  HBox.hgrow="NEVER"
                  text="Send"
                  defaultButton="true"/>
              </children>
            </HBox>
          </children>
        </VBox>
      </children>
    </AnchorPane>
  </items>
</SplitPane>
